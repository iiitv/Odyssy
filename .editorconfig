root = true

[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4
max_line_length = 119

[*.html]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 4

[*.json]
indent_size = 2
indent_style = space
insert_final_newline = ignore

[*.bat]
indent_style = tab

